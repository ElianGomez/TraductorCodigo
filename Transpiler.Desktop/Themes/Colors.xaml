<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Color x:Key="PrimaryColor">#009688</Color>
    <!-- Teal -->
    <Color x:Key="SecondaryColor">#FFC107</Color>
    <!-- Amber -->
    <Color x:Key="BackgroundColor">#FF1E1E1E</Color>
    <!-- Gris oscuro -->

    <!-- Brushes derivados -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />

    <!-- Overrides MaterialDesign -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FF121212"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignDivider" Color="#FF2C2C2C"/>

</ResourceDictionary>